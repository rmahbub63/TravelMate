<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView

        android:id="@+id/imageViewEmail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageViewEmail"
        android:hint="Enter email here"
        android:inputType="textEmailAddress"
        android:layout_alignBottom="@+id/imageViewEmail"/>
    <ImageView
        android:id="@+id/imageViewPassword"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageViewEmail"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageViewPassword"
        android:hint="Enter password here"
        android:inputType="textPassword"
        android:layout_alignBottom="@+id/imageViewPassword"/>




    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        style="@android:style/TextAppearance.Medium"
        android:background="#008080"
        android:layout_below="@+id/editTextPassword"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/button_fb_login"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
         />

</RelativeLayout>